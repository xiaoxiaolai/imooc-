<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/List_item_1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp">

    <RelativeLayout
        android:id="@+id/ImageItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageItem"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:src="@mipmap/ic_launcher" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ImageItem1"
        android:paddingTop="15dp"
        android:text="应用自动更新开发应用自动更新开发应"
        android:textColor="@color/black_000000"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ImageItem1"
        android:gravity="center_vertical"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/ImageItemSamll"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downloadnumber"
            android:layout_marginLeft="2dp"
            android:text="2345/"
            android:textSize="9sp"
            android:textColor="@color/red_C01000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:layout_marginLeft="2dp"
            android:text="2345"
            android:textSize="9sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="更新完成"
            android:textSize="9sp" />

    </LinearLayout>


</RelativeLayout>